<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/icSquareTopStartView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_red_view"
        android:rotation="140"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/icSquareTopEndView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_red_view"
        android:rotation="140"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_my_number"
            android:textColor="@color/red"
            android:textSize="80sp"
            app:layout_constraintEnd_toStartOf="@id/icSquareTopEndView"
            app:layout_constraintStart_toEndOf="@id/icSquareTopStartView"
            app:layout_constraintTop_toBottomOf="@id/icSquareTopStartView"
            app:layout_constraintBottom_toTopOf="@id/icSquareCenterStartView"/>

    <View
        android:id="@+id/icSquareCenterStartView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/ic_red_view"
        android:rotation="140"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icSquareTopStartView"
        app:layout_constraintBottom_toTopOf="@id/icSquareBottomStartView"/>

    <View
        android:id="@+id/icSquareCenterEndView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_red_view"
        android:rotation="140"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icSquareTopEndView"
        app:layout_constraintBottom_toTopOf="@id/icSquareBottomEndView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:text="@string/app_my_number"
            android:textColor="@color/red"
            android:textSize="80sp"
            app:layout_constraintBottom_toTopOf="@id/icSquareBottomStartView"
            app:layout_constraintEnd_toStartOf="@id/icSquareBottomEndView"
            app:layout_constraintStart_toEndOf="@id/icSquareBottomStartView"
            app:layout_constraintTop_toBottomOf="@id/icSquareCenterStartView"
            />

    <View
        android:id="@+id/icSquareBottomStartView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ic_red_view"
        android:rotation="140"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/icSquareBottomEndView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_red_view"
        android:rotation="140"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

